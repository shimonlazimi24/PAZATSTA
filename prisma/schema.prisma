generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  teacher
  parent
  student
}

enum LessonStatus {
  scheduled
  completed
  canceled
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  role      Role
  createdAt DateTime @default(now())

  sessions           Session[]
  teacherProfile     TeacherProfile?
  studentProfile     StudentProfile?
  lessonsAsTeacher   Lesson[] @relation("LessonTeacher")
  lessonsAsStudent   Lesson[] @relation("LessonStudent")
  availabilitySlots  Availability[]
}

model TeacherProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  displayName      String?
  bio              String?
  profileImageUrl  String?
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StudentProfile {
  id                     String    @id @default(cuid())
  userId                 String    @unique
  studentFullName        String?
  parentFullName         String?
  parentPhone            String?
  currentScreeningType   String?   // selected topic
  currentScreeningDate   DateTime?
  followUpReminderSentAt DateTime?  // reminder tracking
  createdAt              DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Availability {
  id        String   @id @default(cuid())
  teacherId String
  date      DateTime
  startTime String
  endTime   String
  createdAt DateTime @default(now())

  teacher User @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, date, startTime])
  @@index([teacherId, date])
}

// TODO (time consistency): Consider startsAt/endsAt DateTime (UTC) instead of date + startTime/endTime
// to avoid timezone bugs. Would require migration and API/UI updates.
model Lesson {
  id                  String       @id @default(cuid())
  teacherId           String
  studentId           String
  date                DateTime
  startTime           String
  endTime             String
  status              LessonStatus @default(scheduled)
  reportCompleted     Boolean      @default(false)
  followUpCompletedAt DateTime?
  questionFromStudent String?
  createdAt           DateTime     @default(now())

  teacher User @relation("LessonTeacher", fields: [teacherId], references: [id], onDelete: Cascade)
  student User @relation("LessonStudent", fields: [studentId], references: [id], onDelete: Cascade)
  summary LessonSummary?

  @@unique([teacherId, date, startTime])
  @@index([teacherId, date])
  @@index([studentId, date])
}

model LessonSummary {
  id               String   @id @default(cuid())
  lessonId         String   @unique
  summaryText      String   @default("") // סיכום כללי (generalSummary)
  homeworkText     String   @default("")
  pointsToKeep     String   @default("") // נקודות לשימור (preservationPoints)
  pointsToImprove  String   @default("") // נקודות לשיפור (improvementPoints)
  tips             String   @default("")
  recommendations  String   @default("") // המלצות להמשך (nextRecommendations)
  pdfUrl           String?
  createdAt        DateTime @default(now())

  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model Invite {
  id        String    @id @default(cuid())
  email     String
  role      Role
  expiresAt DateTime
  usedAt   DateTime?
  createdAt DateTime  @default(now())
}

model LoginCode {
  id        String   @id @default(cuid())
  email     String
  codeHash  String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
